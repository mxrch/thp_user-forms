<br>
<div align="center" style="margin-top:20px">
  <h1 style="color:  #f1f1f1">Tous les utilisateurs</h1>
  <br>

  <a class="btn btn-success" style="color: #f1f1f1" href=<%= new_user_path %> role="button">Nouvel utilisateur</a>

  <br>
  <br>
  <br>

  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">Numéro</th>
        <th scope="col">Nom d'utilisateur</th>
        <th scope="col">Adresse Email</th>
        <th scope="col">Bio</th>
        <th colspan="4" scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.bio %></td>
          <td class="btn btn-primary" class="tr-action"><%= link_to 'Voir', user %></td>
          <td class="btn btn-success" class="tr-action"><%= link_to 'Modifier', edit_user_path(user) %></td>
          <td class="btn btn-danger"><%= link_to 'Supprimer', user, method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
